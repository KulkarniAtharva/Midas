<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="21.0dip">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="21.0dip"
                android:paddingEnd="21.0dip">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@id/linearlayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@id/back"
                        android:background="@null"
                        android:layout_width="2.0dip"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:src="@drawable/arrow_back"
                        android:layout_weight="2.0" />

                    <TextView
                        android:textSize="30.0dip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="कालव्याचे तपशील"
                        android:layout_weight="10.0" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@id/chart1"
                    android:layout_width="fill_parent"
                    android:layout_height="230.0dip"
                    android:layout_marginTop="30.0dip" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@id/grid"
                android:background="@drawable/cardview_rounded"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50.0dip">

                <TextView
                    android:textSize="20.0dip"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@id/pani_vapa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip"
                    android:text="पाणी वापर:" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginStart="21.0dip"
                    android:layout_marginEnd="21.0dip">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20.0dip"
                            android:paddingEnd="20.0dip">

                            <ImageView
                                android:layout_width="64.0dip"
                                android:layout_height="64.0dip"
                                android:src="@drawable/jaminivaril_pani" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="जमिनीवरील" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:id="@id/jaminivaril"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="९.५" />

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" को.टी" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20.0dip"
                            android:paddingEnd="20.0dip">

                            <ImageView
                                android:layout_width="64.0dip"
                                android:layout_height="64.0dip"
                                android:src="@drawable/jirnar_pani" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="जिरणार " />

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:id="@id/bashpibhavan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="१" />

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" को.टी" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>