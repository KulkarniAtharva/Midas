<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#ffffe9e9"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/_21sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_21sdp"
            android:paddingEnd="@dimen/_21sdp">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@id/back"
                    android:background="@null"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:src="@drawable/arrow_back"
                    android:layout_weight="2.0" />

                <TextView
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="पाऊस"
                    android:layout_weight="20.0" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_20sdp" />

            <TextView
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Years" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/cardview_rounded"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginEnd="@dimen/_21sdp">

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="1.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="पावसाची तुलना" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="पाणी बचत:"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="एकूण पाणी गरज:"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="भूजल विकासाचा टप्पा:"
                            android:layout_weight="1.0" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="@drawable/border"
                            android:padding="@dimen/_4sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="@drawable/border"
                            android:padding="@dimen/_4sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            android:layout_marginStart="@dimen/_50sdp" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>