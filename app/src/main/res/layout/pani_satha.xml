<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.0dip"
            android:paddingStart="21.0dip"
            android:paddingEnd="21.0dip">

            <ImageButton
                android:id="@id/back"
                android:background="@null"
                android:layout_width="2.0dip"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                android:layout_weight="2.0" />

            <TextView
                android:textSize="30.0dip"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पाणी साठा"
                android:layout_weight="20.0" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="75.0dip"
            android:layout_marginBottom="280.0dip"
            android:src="@drawable/pani_satha"
            android:scaleType="fitXY"
            android:paddingStart="100.0dip"
            android:paddingEnd="30.0dip" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/cardview_rounded"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="380.0dip">

            <TextView
                android:textSize="20.0dip"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:text="संचयन संरचना" />

            <ScrollView android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="21.0dip"
                        android:layout_marginEnd="21.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10.0dip"
                            android:paddingEnd="10.0dip">

                            <ImageView
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:src="@drawable/prushtabhagavaril" />

                            <TextView
                                android:textSize="16.0dip"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="कालवा पाणी"
                                android:layout_weight="1.0"
                                android:layout_marginStart="10.0dip" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="21.0dip"
                        android:layout_marginEnd="21.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10.0dip"
                            android:paddingEnd="10.0dip">

                            <ImageView
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:src="@drawable/prushtabhagavaril" />

                            <TextView
                                android:textSize="16.0dip"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="पृष्ठभागावरील पाण्याची रचना"
                                android:layout_weight="1.0"
                                android:layout_marginStart="10.0dip" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dip"
                        android:layout_marginBottom="32.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="21.0dip"
                        android:layout_marginEnd="21.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="18.0dip"
                            android:paddingBottom="18.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10.0dip"
                            android:paddingEnd="10.0dip">

                            <ImageView
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:src="@drawable/jalsandharan" />

                            <TextView
                                android:textSize="16.0dip"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="जलसंधारण रचना"
                                android:layout_weight="1.0"
                                android:layout_marginStart="10.0dip" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>