<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_21sdp"
            android:paddingStart="@dimen/_21sdp"
            android:paddingEnd="@dimen/_21sdp">

            <ImageButton
                android:id="@id/back"
                android:background="@null"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                android:layout_weight="2.0" />

            <TextView
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पाणी साठा"
                android:layout_weight="20.0" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_marginBottom="@dimen/_240sdp"
            android:src="@drawable/pani_satha"
            android:scaleType="fitXY"
            android:paddingStart="@dimen/_90sdp"
            android:paddingEnd="@dimen/_20sdp" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/cardview_rounded"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_280sdp">

            <TextView
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="संचयन संरचना" />

            <ScrollView android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="@dimen/_21sdp"
                        android:layout_marginEnd="@dimen/_21sdp"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_13sdp"
                            android:paddingEnd="@dimen/_16sdp">

                            <ImageView
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_48sdp"
                                android:src="@drawable/prushtabhagavaril" />

                            <TextView
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="कालवा पाणी"
                                android:layout_weight="1.0"
                                android:layout_marginStart="@dimen/_13sdp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="@dimen/_21sdp"
                        android:layout_marginEnd="@dimen/_21sdp"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_13sdp"
                            android:paddingEnd="@dimen/_16sdp">

                            <ImageView
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_48sdp"
                                android:src="@drawable/prushtabhagavaril" />

                            <TextView
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="पृष्ठभागावरील पाण्याची रचना"
                                android:layout_weight="1.0"
                                android:layout_marginStart="@dimen/_13sdp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="@dimen/_21sdp"
                        android:layout_marginEnd="@dimen/_21sdp"
                        android:layout_marginBottom="@dimen/_32sdp"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_13sdp"
                            android:paddingEnd="@dimen/_16sdp">

                            <ImageView
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_48sdp"
                                android:src="@drawable/jalsandharan" />

                            <TextView
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="जलसंधारण रचना"
                                android:layout_weight="1.0"
                                android:layout_marginStart="@dimen/_13sdp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>