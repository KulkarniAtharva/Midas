<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#ffffe9e9"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_21sdp"
            android:paddingStart="@dimen/_21sdp"
            android:paddingEnd="@dimen/_21sdp">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/linearlayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@id/back"
                    android:background="@null"
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:src="@drawable/arrow_back"
                    android:layout_weight="2.0" />

                <TextView
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="घरगुती वापर"
                    android:layout_weight="20.0" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@id/chart1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_40sdp" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/cardview_rounded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@id/pani_vapar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="पाणी वापर:" />

            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginEnd="@dimen/_21sdp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:id="@id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:rowCount="2"
                        android:columnCount="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_columnWeight="1"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="@dimen/_48sdp"
                                    android:layout_height="@dimen/_48sdp"
                                    android:src="@drawable/mansa" />

                                <TextView
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="माणसं" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@color/black"
                                        android:id="@+id/mansa"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="६.२" />

                                    <TextView
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" को.टी" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_columnWeight="1.0"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:textSize="15.0dip"
                                    android:layout_width="64.0dip"
                                    android:layout_height="64.0dip"
                                    android:src="@drawable/gure_dhore" />

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="गुरे ढोरे" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:id="@+id/gure_dhore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="१.३" />

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" को.टी" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_columnWeight="1.0"
                            app:cardCornerRadius="10.0dip">

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="64.0dip"
                                    android:layout_height="64.0dip"
                                    android:src="@drawable/kombdi" />

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="कोंबडी" />

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:id="@+id/kombdi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="०.०८३०" />

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" को.टी" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="fill_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_columnWeight="1.0"
                            app:cardCornerRadius="10.0dip">

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="64.0dip"
                                    android:layout_height="64.0dip"
                                    android:src="@drawable/shelya" />

                                <TextView
                                    android:textSize="15.0dip"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="शेळ्या" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:id="@+id/shelya"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="०.०७२२" />

                                    <TextView
                                        android:textSize="15.0dip"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" को.टी" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26.0dip"
                        android:layout_marginBottom="32.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="5.0dip"
                        android:layout_marginEnd="5.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:padding="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:src="@drawable/panyachi_gunvatta" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="पाण्याची गुणवत्ता"
                                android:layout_weight="1.0"
                                android:layout_marginStart="10.0dip" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_forward" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>