<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/linearlayout2"
            android:paddingTop="21.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="21.0dip"
            android:paddingEnd="21.0dip">

            <ImageButton
                android:id="@id/back"
                android:background="@null"
                android:layout_width="2.0dip"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                android:layout_weight="2.0" />

            <TextView
                android:textSize="30.0sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="नियोजन"
                android:layout_weight="20.0" />

        </LinearLayout>
        <ImageView
            android:id="@+id/well_animation"
            android:layout_width="fill_parent"
            android:layout_height="280.0dip"
            android:layout_marginTop="30.0dip" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="30.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पाण्याचा समतोल:" />

            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-४२"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="30.0dip" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5.0dip">

                <LinearLayout
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" %" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/cardview_rounded"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50.0dip">

            <TextView
                android:textSize="20.0dip"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:text="उपाययोजना निवडा" />

            <ScrollView
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@id/cardview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_marginStart="21.0dip"
                            android:layout_marginEnd="21.0dip"
                            app:cardCornerRadius="10.0dip" />

                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="21.0dip"
                        android:layout_marginEnd="21.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:padding="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48.0dip"
                                android:layout_height="48.0dip"
                                android:src="@drawable/recommendation1" />

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="टोमॅटोच्या क्षेत्रामध्ये ठिबक अंतर्गत १००% वाढ." />

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="हरबरा क्षेत्रामध्ये तुषारसिंचनाखाली ७०% पर्यंत वाढ." />

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="कोबी क्षेत्राच्या ठिबक क्षेत्रामध्ये ८५% वाढ." />
                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="कांद्याच्या क्षेत्रामध्ये ठिबक क्षेत्रात ८५% वाढ. " />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@id/cardview3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_marginStart="21.0dip"
                        android:layout_marginEnd="21.0dip"
                        app:cardCornerRadius="10.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:padding="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="48.0dip"
                                android:layout_height="48.0dip"
                                android:src="@drawable/recommendation2" />

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="कोबी अंतर्गत क्षेत्र सोडले जाईल: ३५%" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="कांद्याखालील क्षेत्र सोडले जाईलः ३५%" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="टोमॅटोखालील क्षेत्र सोडले जाईलः ४०%" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="हरबराखालील क्षेत्र सोडले जाईलः ३०%" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:id="@+id/purna"
                        android:background="@drawable/button_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26.0dip"
                        android:layout_marginBottom="32.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:text="पूर्ण" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>