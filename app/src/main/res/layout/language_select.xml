<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:tag="layout/language_select_0"
    android:background="@color/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.0dip"
            android:paddingStart="21.0dip"
            android:paddingEnd="21.0dip">

            <TextView
                android:textSize="30.0dip"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:layout_weight="20.0" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75.0dip"
            android:layout_marginBottom="200.0dip"
            android:src="@drawable/welcome"
            android:scaleType="fitXY"
            android:paddingStart="100.0dip"
            android:paddingEnd="100.0dip" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/cardview_rounded"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="350.0dip">

            <TextView
                android:textSize="20.0dip"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="2.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:text="कृपया आपली भाषा निवडा" />

            <ScrollView
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="27.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:weightSum="3.0"
                    android:layout_marginStart="21.0dip"
                    android:layout_marginEnd="21.0dip">

                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_weight="1.0"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="5.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20.0dip"
                            android:paddingEnd="20.0dip">

                            <ImageView
                                android:layout_width="65.0dip"
                                android:layout_height="65.0dip"
                                android:src="@drawable/marathi" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="मराठी" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_weight="1.0"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="5.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20.0dip"
                            android:paddingEnd="20.0dip">

                            <ImageView
                                android:layout_width="65.0dip"
                                android:layout_height="65.0dip"
                                android:src="@drawable/hindi" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="हिंदी" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_weight="1.0"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="5.0dip">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20.0dip"
                            android:paddingEnd="20.0dip">

                            <ImageView
                                android:layout_width="65.0dip"
                                android:layout_height="65.0dip"
                                android:src="@drawable/english" />

                            <TextView
                                android:textSize="15.0dip"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:text="English" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>